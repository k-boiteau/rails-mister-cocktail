<h1><%= @cocktail.name %></h1>
<div class="row padded">
  <div class="col-md-4 text-center">
    <%= cl_image_tag @cocktail.photo, height: 250, width: 250, crop: :fill %>
  </div>
  <div class="col-md-8">
    <table class="table table-responsive">
      <thead>
        <th colspan="2">Ingredients</th>
      </thead>
      <tbody>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td><%= link_to "delete", dose_path(dose), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  <div class="row padded">
    <div class="col-xs-12 col-md-6 text-center">
      <%=link_to "Complete ingredients", new_cocktail_dose_path(@cocktail), Class: "btn btn-danger" %>
    </div>
    <div class="col-xs-12 col-md-6 text-center">
      <%=link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, Class: "btn btn-danger" %>
        <%=link_to "Back", cocktails_path, Class: "btn btn-success" %>
    </div>
  </div>

